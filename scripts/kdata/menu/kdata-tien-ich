printf "                KDATA-VPS - Quan Ly VPS/Server by KDATA.VN \n"
printf "=========================================================================\n"
printf "                           Tien Ich - Addons\n"
printf "=========================================================================\n"

PS3="$prompt"
select opt in "${options[@]}" ; do 

    case "$REPLY" in


	1) /etc/kdata/menu/kdata-doi-pass-root-vps;;
