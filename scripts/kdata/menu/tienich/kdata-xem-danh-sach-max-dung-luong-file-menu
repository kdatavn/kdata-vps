#!/bin/bash
printf "=========================================================================\n"
prompt="Lua chon cua ban:"
options=("Tim File Va Folder Trong public_html Cua Domain" "Tim File Va Folder Trong Folder Home")
PS3="$prompt"
select opt in "${options[@]}" "Thoat"; do 

    case "$REPLY" in
    1) /etc/kdata/menu/tienich/kdata-xem-danh-sach-max-dung-luong-file-domain;;
    2) /etc/kdata/menu/tienich/kdata-danh-sach-max-dung-luong-file-folder-home;;
$(( ${#options[@]}+1 )) ) echo "";  clear && /etc/kdata/menu/kdata-tien-ich;;
     *) echo "Ban nhap sai, vui long nhap theo so thu tu tren menu !";continue;;

    esac

done


