#!/bin/bash
if [ ! -f /etc/pure-ftpd/pureftpd.passwd ]; then
touch /etc/pure-ftpd/pureftpd.passwd
fi
prompt="Lua chon cua ban (0-Thoat):"
options=("Tao Tai Khoan FTP Cho Website" "Vo Hieu Hoa Tai Khoan FTP" "Thay Mat Khau Tai Khoan FTP" "Xem Thong Tin FTP Cua Website" "Remove FTP Server" )
printf "=========================================================================\n"
printf "                KDATA - Quan Ly VPS/Server by KDATA.VN \n"
printf "=========================================================================\n"
printf "                            Quan Ly FTP Server \n"
printf "=========================================================================\n"
echo ""
PS3="$prompt"
select opt in "${options[@]}" "Thoat"; do 

    case "$REPLY" in
    
        1) /etc/kdata/menu/kdata-tao-ftp-user-cho-domain;;
    2) /etc/kdata/menu/kdata-xoa-ftp-user;;
    3) /etc/kdata/menu/kdata-thay-mat-khau-user-ftp;;
    4) /etc/kdata/menu/kdata-view-userftp-password;;
       5) /etc/kdata/menu/ftp-server-remove;;
    0) clear && kdata;;

$(( ${#options[@]}+1 )) ) echo "";  clear && kdata;;
     *) echo "Ban nhap sai, vui long nhap theo so thu tu tren menu !";continue;;

    esac

done


