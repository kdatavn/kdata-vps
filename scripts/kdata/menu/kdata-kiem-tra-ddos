#!/bin/sh
prompt="Lua chon cua ban (0-Thoat):"
options=("Tu dong kiem tra va block IP" "Ket noi toi cong 80 & 443" "So ket noi dang SYN_RECV" "IP dang ket noi & so ket noi/IP" "Block IP")
printf "=========================================================================\n"
printf "                KDATA - Manage VPS/Server by KDATA.VN             \n"
printf "=========================================================================\n"
printf "                   Check DDOS, Flood & Block IP DOS\n"
printf "=========================================================================\n"
PS3="$prompt"
select opt in "${options[@]}" "Thoat"; do 

    case "$REPLY" in
    1 ) /etc/kdata/menu/checkddos/auto-check-block-ip-ddos;;
    2 ) /etc/kdata/menu/checkddos/kdata-so-ket-noi;;
    3 ) /etc/kdata/menu/checkddos/kdata-so-rysync;;
    4 ) netstat -an|grep :80 |awk '{print $5}'|cut -d":" -f1|sort|uniq -c|sort -rn;;
    5 ) /etc/kdata/menu/kdata-chan-ip-ddos;;
    0) clear && kdata;;
      
    $(( ${#options[@]}+1 )) ) echo "Tam biet!";  clear && /bin/kdata;;
    *) echo "Ban nhap sai, vui long nhap theo so thu tu tren menu !";continue;;

    esac
done
